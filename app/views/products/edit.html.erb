<div class="d-flex justify-content-center align-items-center">
<h1>Edit Product</h1>
</div>
<%= form_with model: @product,class: "product-form", local: true do |f| %>
  <div class="mb-3">
<%=  f.label :name ,  class: "form-label"%>
<%= f.text_field :name, class:"form-control",placeholder:'Product Name',required: true  %>
<% @product.errors.full_messages_for(:name).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
</div>
  <div class="mb-3">
<%= f.label :description,class: "form-label"%>
<%= f.text_field :description, class:"form-control",placeholder:'Product Description',required: true %>
<% @product.errors.full_messages_for(:description).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
</div>
  <div class="mb-3">
<%= f.label :quantity,class: "form-label"%>
<%= f.number_field  :quantity, class:"form-control",placeholder:'1',onkeypress:"return (event.charCode !=8 && event.charCode ==0 || (event.charCode >= 48 && event.charCode <= 57))",required: true %>
<% @product.errors.full_messages_for(:quantity).each do |message| %>
      <div style="color:red"><%= message %></div>
    <% end %>
</div>
 <div class="mb-3">
 <%= f.submit "Update",class:"btn btn-primary"%>
         <button onclick="location.href='/products'" type="button" class="btn btn-outline-primary">Return</button>

</div>
<% end %>