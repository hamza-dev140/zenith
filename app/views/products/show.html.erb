<div class="d-flex justify-content-center align-items-center">
<h1>Product Details</h1>
</div>
<form>
  <div class="mb-3">
    <label for="name" class="form-label">Product Name:</label>
    <input readonly class="form-control" id="name" aria-describedby="name" value='<%= @product.name %>' >
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Product Description:</label>
    <input readonly class="form-control" id="description" aria-describedby="description" value='<%= @product.description %>'>
  </div>
  <div class="mb-3">
      <label for="quantity" class="form-label">Product Quantity:</label>
  <input readonly class="form-control" type="number" id="quantity" name="quantity" min="1" value='<%= @product.quantity %>'>  </div>
        <button onclick="location.href='/products'" type="button" class="btn btn-outline-primary">Return</button>

</form>
<br>
<div id="container">
<h4>Comments</h4>
<%= @product.comments.all.length %>
</div>
<div class="container-fluid">

<%= render @product.comments %>

</div>
<h4>Add a comment:</h4>
<%= render "comments/form" %>