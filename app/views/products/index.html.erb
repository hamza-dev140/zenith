<div style="display: flex; justify-content: space-between;">
  <h1 style="margin: 0 auto;">Zenith</h1>
  <h1> <%= button_to "", destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' }, style: "text-decoration:none; background: none; border: none; padding: 0; margin-left: 5px;" ,class:"bi bi-box-arrow-right",style:'color:red;background:none;border:none' %></h1>
</div>



<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <form class="d-flex" id="searchForm" role="search">
      <input class="form-control me-2" id="searchInput" type="search" placeholder="Search" aria-label="Search" style="width:100% !important">
      <button class="btn btn-outline-success mx-2" type="submit">Search</button>
 <a style="text-decoration:none" class="btn btn-outline-primary mx-2" href="<%= new_product_path %>">New</a>    
 </form>
  </div>
</nav>
<h2>List of Products:</h2>
<div id="searchResults">
<table class="table">
      <% @product.each do |product| %>
      <tbody class="productRow">
        <tr>
              <% unless product.archived? %>
          <td>
            <div style="display: flex; align-items: center;">
              <div style="flex: 1;"><%= product.name %></div>
              <div class="d-flex justify-content-center align-items-center ">
               <%= link_to "", product_path(product), class: "bi bi-eye-fill px-2", style: "color:green" %>
                <%= link_to "", edit_product_path(product), class: "bi bi-pencil-square px-2", style: "color:orange" %>
                <%= button_to "", product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, style: "text-decoration:none; background: none; border: none; padding: 0; margin-left: 5px;" ,class:"bi bi-trash3-fill px-2",style:'color:red;background:none;border:none' %>
              </div>
            </div>
          </td>
          <%end%>
        </tr>
      </tbody>
      <% end %>
    </table>
    </div>
<p>Our store has <%= content_tag(:span, Product.public_count, style: "color:orange;font-weight:bold") %> products and counting!</p>

