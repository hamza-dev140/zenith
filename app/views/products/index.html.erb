<div class="d-flex justify-content-center align-items-center">
  <h1>Zenith</h1>
</div>
<nav class="navbar bg-body-tertiary">
  <div class="container-fluid">
    <form class="d-flex" id="searchForm" role="search">
      <input class="form-control me-2" id="searchInput" type="search" placeholder="Search" aria-label="Search" style="width:100% !important">
      <button class="btn btn-outline-success mx-2" type="submit">Search</button>
      <button onclick="location.href='/products/new'" type="button" class="btn btn-outline-primary mx-2">Add</button>
    </form>
  </div>
</nav>
<h2>List of Products:</h2>
<table class="table">
      <% @product.each do |product| %>
      <tbody class="productRow">
        <tr>
          <td>
            <div style="display: flex; align-items: center;">
              <div style="flex: 1;"><%= product.name %></div>
              <div class="d-flex justify-content-center align-items-center ">
                <a style="text-decoration:none" href="<%= product_path(product) %>"><i class="bi bi-eye-fill px-2" style="color: green;"></i></a>
                <a style="text-decoration:none" href="<%= edit_product_path(product) %>"><i class="bi bi-pencil-square px-2" style="color: orange;"></i></a>
                <%= button_to product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, style: "text-decoration:none; background: none; border: none; padding: 0; margin-left: 5px;" do %>
                  <i class="bi bi-trash3-fill px-2" style="color: red;"></i>
                <% end %>
              </div>
            </div>
          </td>
        </tr>
      </tbody>
      <% end %>
    </table>
    <p>Total Products: <%= @product.all.length%></p>

